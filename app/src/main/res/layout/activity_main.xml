<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#58A9FF"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/editTextNumero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="@string/ingrese2"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@+id/editTextNumero1"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumero1" />

    <Button
            android:id="@+id/btnsalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="184dp"
            android:text="@string/btnSalir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnlimpiar"
            app:layout_constraintTop_toBottomOf="@+id/txtViewRespuesta"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/btnSalir" />

    <EditText
            android:id="@+id/editTextNumero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ingresen1"
            android:inputType="number"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="115dp" />

    <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="184dp"
            android:text="@string/btnLimpiar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnsalir"
            app:layout_constraintStart_toEndOf="@+id/btnsumar"
            app:layout_constraintTop_toBottomOf="@+id/txtViewRespuesta"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/btnLimpiar" />

    <Button
            android:id="@+id/btnsumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="184dp"
            android:text="@string/btnSumar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnlimpiar"
            app:layout_constraintStart_toStartOf="@+id/txtViewRespuesta"
            app:layout_constraintTop_toBottomOf="@+id/txtViewRespuesta"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/btnSumar" />

    <TextView
            android:id="@+id/txtViewRespuesta"
            android:layout_width="213dp"
            android:layout_height="34dp"
            android:layout_marginTop="48dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/editTextNumero2"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumero2" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="271dp"
            android:layout_marginRight="271dp"
            android:layout_marginBottom="51dp"
            android:background="@color/colorPrimaryDark"
            android:text="Calculadora"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumero1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toastMe"
            android:text="Notificacion"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="601dp" />

    <TextureView
            android:id="@+id/view_finder"
            android:layout_width="640px"
            android:layout_height="640px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>